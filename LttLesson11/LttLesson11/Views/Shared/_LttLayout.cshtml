<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Le Tuan Tinh</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Le Tuan Tinh", "LttIndex", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "LttIndex", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "LttAbout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "LttContact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (HttpContext.Current.Session["LttMember"] != null)
                    {   
                        LttLesson11.Models.LttTaiKhoan LttModel = (LttLesson11.Models.LttTaiKhoan)(HttpContext.Current.Session["LttMember"]);

                        <li>
                            <a href="#" class="nav-link">Xin chào, @LttModel.LttFullName</a>
                            <a href="/LttTaiKhoans/Logout" class="nav-link">Đăng xuất</a>
                        </li>
                    }
                    else
                    {
                        @*chưa đăng nhập*@
                        <li>@Html.ActionLink("Đăng nhập", "LttLogin", "LttTaiKhoans", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Le Tuan Tinh</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
