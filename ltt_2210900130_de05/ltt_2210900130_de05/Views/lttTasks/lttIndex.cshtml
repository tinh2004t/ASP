@model IEnumerable<ltt_2210900130_de05.Controllers.lttTask>

@{
    ViewBag.Title = "LTT - Danh Sach Task";
}

<h2>LTT - Danh Sách Task</h2>

<div class="d-flex justify-content-end mb-3">
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("lttCreate")'">ltt-Create</button>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lttTaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lttTaskLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lttStartDate)
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.lttTaskName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lttTaskLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lttStartDate)
                </td>
                <td>
                    @(item.lttTaskStatus ?? false ? "Show" : "Hide")
                </td>
                <td>
                    <button type="button" class="btn btn-sm btn-success" onclick="location.href='@Url.Action("lttEdit", new { id = item.lttTaskId.Trim() })'">ltt-Edit</button>
                    <button type="button" class="btn btn-sm btn-info" onclick="location.href='@Url.Action("lttDetails", new { id = item.lttTaskId.Trim() })'">ltt-Detailt</button>
                    <button type="button" class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("lttDelete", new { id = item.lttTaskId.Trim() })'">ltt-Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
