<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Le Tuan Tinh</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        @{ var user = Session["User"] as LeTuanTinh_2210900130.Models.User;}
        <div class="container">
            @Html.ActionLink("Le Tuan Tinh", "LttIndex", "LttHome", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "LttIndex", "LttHome", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("About", "LttAbout", "LttHome", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "LttContact", "LttHome", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Ds.TacGia", "LttIndex", "ltt_TAGGIA", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Ds.Sach", "LttIndex", "ltt_SACH", new { area = "" }, new { @class = "nav-link" })</li>
                    @{
                        if (user == null)
                        {
                            <li>@Html.ActionLink("Dang Nhap", "LttLogin", "lttHome", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Dang Ky", "LttSignin", "lttHome", new { area = "" }, new { @class = "nav-link" })</li>

                        }

                        else
                        {
                            <li><a style="color:ghostwhite" href="#">Xin Chao: @user.ltt_UserName</a></li>
                            <li>@Html.ActionLink("Dang Xuat", "LttLogout", "lttHome", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }



                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LeTuanTinh</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
