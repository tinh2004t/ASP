@model IEnumerable<Ltt_TMDT.Views.ViewModels.MenuLoaiVM>

<div class="bg-light rounded p-4">
    <h4 class="text-primary mb-4">Categories</h4>
    <div class="list-group">
        @foreach (var item in Model) {
        <a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.MaLoai" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <span><i class="fas fa-apple-alt text-success"></i>@item.TenLoai</span>
            <span class="badge bg-light text-muted">(@item.SoLuong)</span>
        </a>
        }
    </div>
</div>